@bot.message_handler(commands=['play'])
def play_command(message):
    game_url = "https://kislenkoser.github.io/Tank_Battle_Game/"
    bot.send_message(
        message.chat.id,
        f"üéÆ –ò–≥—Ä–∞–π—Ç–µ –∑–¥–µ—Å—å: {game_url}"
    )

